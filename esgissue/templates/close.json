{   "$schema": "http://json-schema.org/schema#",
    "additionalProperties": false,
    "properties": {
        "id": {
            "type": "string",
            "pattern": "^[0-9a-f]{8}(-[0-9a-f]{4}){3}-[0-9a-f]{12}$"
        },
        "description": {
            "minLength": 1,
            "type": "string"
        },
        "materials": {
            "items": {
                "pattern": "\\.(jpg|gif|png|tiff)$",
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "models": {
            "items": {
                "minLength": 1,
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "experiments": {
            "items": {
                "minLength": 1,
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "variables": {
            "items": {
                "minLength": 1,
                "type": "string"
            },
            "type": "array",
            "uniqueItems": true
        },
        "project": {
            "minLength": 1,
            "type": "string"
        },
        "severity": {
            "enum": [
                "low",
                "medium",
                "high",
                "critical"
            ],
            "type": "string"
        },
        "title": {
            "minLength": 1,
            "type": "string"
        },
        "url": {
            "minLength": 1,
            "type": "string"
        },
        "date_updated": {
            "format": "date-time",
            "type": "string"
        },
        "date_created": {
            "format": "date-time",
            "type": "string"
        },
        "institute": {
            "minLength": 1,
            "type": "string"
        },
        "status": {
            "enum": [
                "new",
                "onhold",
                "wontfix",
                "resolved"
            ],
            "type": "string"
        }
    },
    "required": [
        "id",
        "title",
        "description",
        "severity",
        "project",
        "models",
        "status",
        "experiments",
        "variables"
    ],
    "title": "ESGF issue JSON schema",
    "type": "object"
}
