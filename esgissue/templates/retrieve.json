{
"$schema": "http://json-schema.org/schema#",
"title": "ESGF issue JSON schema",
"type": "object",
"properties": {
  "uid": {
    "type": "string",
    "pattern": "^[0-9a-f]{8}(-[0-9a-f]{4}){3}-[0-9a-f]{12}$"
  },
  "title": {
    "type": "string",
    "minLength": 1
  },
  "description": {
    "type": "string",
    "minLength": 1
  },
  "severity": {
    "type": "string",
    "enum": [
      "low",
      "medium",
      "high",
      "critical"
    ]
  },
  "institute": {
    "type": "string",
    "minLength": 1
  },
  "project": {
    "type": "string",
    "minLength": 1
  },
  "url": {
    "type": "string",
    "minLength": 1
  },
  "materials": {
    "type": "array",
    "uniqueItems": true,
    "items": {
      "type": "string",
      "pattern": "\\.(jpg|gif|png|tiff)$"
    }
  },
  "status": {
    "type": "string",
    "enum": [
      "new",
      "onhold",
      "wontfix",
      "resolved"
    ]
  },
  "dateCreated": {
    "type": "string",
    "format": "date-time"
  },
  "dateUpdated": {
    "type": "string",
    "format": "date-time"
  }
},
"additionalProperties": true,
"required": [
  "dateCreated",
  "dateUpdated",
  "uid",
  "title",
  "description",
  "severity",
  "status",
  "datasets",
  "url",
  "materials",

  "mip_era",
  "activity_id",
  "institution_id",
  "source_id",
  "experiment_id",
  "variable_id"]
}
